//firestore_database, 


const { collection, addDoc } = require("firebase/firestore");
const { firestore_database } = require("./firebase");

const saveURL = async () => {
  try {
    const res = await firestore_database.collection('URLs').add({
      longURL: 'Tokyo',
      shortURL: 'Japan'
    });
    
    console.log('Added document with ID: ', res.id);
    // const longURL = "100";
    // const shortURL = "10";
    // const URL = { longURL, shortURL };

    // Pfad zur Sammlung angeben (z.B. "URLs")
    const URLDatabase = firestore_database.collection("/URLs");
    console.log(URLDatabase);

    // await addDoc(URL, URLDatabase);
    
    console.log("URL erfolgreich gespeichert:", longURL, shortURL);
    return true;
  } catch (error) {
    console.error("Fehler beim Speichern der URL:", error);
    return false;
  }
};

(async () => {
  await saveURL();
})();
